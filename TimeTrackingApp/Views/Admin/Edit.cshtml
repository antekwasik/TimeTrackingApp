@model TimeTrackingApp.Models.ViewModel.EditViewModel

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label>First Name</label>
        <input asp-for="FirstName" class="form-control" />
    </div>

    <div class="form-group">
        <label>Last Name</label>
        <input asp-for="LastName" class="form-control" />
    </div>

    <div class="form-group">
        <label>Position</label>
        <input asp-for="Position" class="form-control" />
    </div>

    <div class="form-group">
        <label>Department</label>
        <input asp-for="Department" class="form-control" />
    </div>

    <div class="form-group">
        <label>Is Active</label>
        <input asp-for="IsActive" type="checkbox" class="form-check-input" />
    </div>

    <div class="form-group">
        <label>Role</label>
        <select asp-for="Role" class="form-control" asp-items="@(new SelectList(Model.AllRoles, Model.Role))">
            <option value="">-- Select Role --</option>
        </select>
    </div>



    <button type="submit" class="btn btn-info mt-3">Save</button>
</form>