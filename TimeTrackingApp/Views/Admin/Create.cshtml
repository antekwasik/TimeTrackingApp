@model TimeTrackingsApp.Models.Entities.User

<h2>Dodaj użytkownika</h2>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label>Email</label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="form-group">
        <label>Hasło</label>
        <input type="password" name="password" class="form-control" />
    </div>

    <div class="form-group">
        <label>Imię</label>
        <input asp-for="FirstName" class="form-control" />
    </div>

    <div class="form-group">
        <label>Nazwisko</label>
        <input asp-for="LastName" class="form-control" />
    </div>

    <div class="form-group">
        <label>Stanowisko</label>
        <input asp-for="Position" class="form-control" />
    </div>

    <div class="form-group">
        <label>Dział</label>
        <input asp-for="Department" class="form-control" />
    </div>

    <div class="form-check">
        <input asp-for="IsActive" type="checkbox" class="form-check-input" />
        <label asp-for="IsActive" class="form-check-label">Aktywny</label>
    </div>

    <button class="btn btn-success mt-3">Zapisz</button>
</form>
