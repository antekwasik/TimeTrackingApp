@model List<TimeTrackingApp.Models.ViewModel.PanelViewModel>

@{
    ViewData["Title"] = "Użytkownicy";
}


<div class="table-responsive">
    <table class="table table-hover table-striped table-bordered text-center align-middle">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Imię</th>
                <th>Nazwisko</th>
                <th>Stanowisko</th>
                <th>Dział</th>
                <th>Rola</th>
                <th>Aktywny</th>
                <th>Utworzono</th>
                <th>Akcje</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.Email</td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.Position</td>
                    <td>@user.Department</td>
                    <td>@user.Role</td>
                    <td>@(user.IsActive ? "Tak" : "Nie")</td>
                    <td>@user.CreatedAt.ToString("yyyy-MM-dd")</td>
                    <td>
                        <div class="d-flex flex-wrap justify-content-center gap-1">
                            <form asp-action="Edit" method="get" asp-route-id="@user.Id">
                                <button class="btn btn-primary btn-sm">EDIT</button>
                            </form>

                            <form asp-action="Delete" method="post" asp-route-id="@user.Id">
                                <button class="btn btn-danger btn-sm">USUŃ</button>
                            </form>

                            @if (user.IsActive)
                            {
                                <form asp-action="Deactivate" method="post" asp-route-id="@user.Id">
                                    <button class="btn btn-warning btn-sm">Dezaktywuj</button>
                                </form>
                            }
                            else
                            {
                                <form asp-action="Activate" method="post" asp-route-id="@user.Id">
                                    <button class="btn btn-success btn-sm">Aktywuj</button>
                                </form>
                            }
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <form asp-action="Create" method="get" class="input-group mb-3 justify-content-center">
        <button class="btn btn-success w-50 fs-5 fw-bold">DODAJ</button>
    </form>
</div>
<div class="mb-4 d-flex gap-2 justify-content-center">
    <a class="btn btn-outline-primary" asp-action="WorkReport">Raport czasu pracy</a>
    <a class="btn btn-outline-secondary" asp-action="LeaveRequests">Wnioski urlopowe</a>
</div>